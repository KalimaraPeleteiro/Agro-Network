<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E5E5"
    tools:context=".activity.FormActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/comfortaa"
        android:text="Crie um Novo Pedido"
        android:textColor="#2D5F0F"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/FormInputDescription"
        android:layout_width="267dp"
        android:layout_height="271dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:fontFamily="@font/comfortaa"
        android:foregroundTint="#000000"
        android:gravity="bottom|start"
        android:hint="Detalhes do Pedido"
        android:inputType="textMultiLine"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHint="#2D5F0F"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/FormInputNameOfProduct"
        android:layout_width="269dp"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:fontFamily="@font/comfortaa"
        android:hint="Nome do Produto"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHint="#2D5F0F"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FormInputDescription" />

    <EditText
        android:id="@+id/FormInputPaymentMethod"
        android:layout_width="269dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:fontFamily="@font/comfortaa"
        android:hint="MÃ©todo de Pagamento"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHint="#2D5F0F"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FormInputNameOfProduct" />

    <Button
        android:id="@+id/FormInputCreateButton"
        android:layout_width="97dp"
        android:layout_height="49dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="#2D5F0F"
        android:fontFamily="@font/comfortaa"
        android:text="CRIAR"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FormInputPaymentMethod" />

</androidx.constraintlayout.widget.ConstraintLayout>